<div class="container">
  <div class="row"> 
  <% provide(:title, @title) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1><%= link_to @user.name, user_path(current_user.id), method: :get, class:"head_menu" %></h1>
        <span><%#= link_to "view my profile", @user, class:"btn btn-default" %></span>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render "users/user" %>
        </ul>
        <%= paginate @users, theme:'twitter-bootstrap-3',pagination_class:"pagination-sm pagination-left" %>
      <% end %>
    </div>
  </div>
  </div>
</div>